<nav class="py-4 px-4 md:px-8 xl:px-12" x-data>
  <div class="container mx-auto flex max-w-4xl justify-between border-b-2 p-2 border-lime-600">
    <a class="font-bold" href="{{ '/' | url }}">
      Steffen Plunder
    </a>
    {# Desktop Nav #}
    <div class="hidden md:flex items-center gap-8">
      {% for item in navigation %}
        <a
          class="{{ 'font-black' if page.url == item.route }}"
          href="{{ item.route | url }}"
        >
          {{ item.name }}
        </a>
      {% endfor %}
    </div>
    <button class="md:hidden" @click="$store.nav.toggle()">
      <svg x-show="!$store.nav.isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
      </svg>
      <svg x-show="$store.nav.isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
  {# Mobile Navigation #}
  <nav
    class="container mt-8 flex flex-col gap-3 md:hidden"
    x-cloak
    x-show="$store.nav.isOpen"
  >
    {% for item in navigation %}
      <a
        class="{{ 'font-black' if page.url == item.route }}"
        href="{{ item.route | url }}"
      >
        {{ item.name }}
      </a>
    {% endfor %}
  </nav>
</nav>
